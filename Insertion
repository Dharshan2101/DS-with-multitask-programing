#include <stdio.h>
int main()
{
    int i, a[15], n, x, j, ele;
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    printf("Enter the elements in sorted order: ");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
    printf("Enter the number to be inserted: ");
    scanf("%d", &ele);
    printf("Enter the position to be inserted: ");
    scanf("%d", &x);
    for(j = n-1; j >= x-1; j--)
    {
        a[j+1] = a[j];
    }
    a[x-1] = ele;
    for(j = 0; j < n+1; j++)
    {
        printf("%d\n", a[j]);
    }
}


OUTPUT 

Enter the number of elements: 3
Enter the elements in sorted order: 2
4
45
Enter the number to be inserted: 56
Enter the position to be inserted: 3
2
4
56
45

