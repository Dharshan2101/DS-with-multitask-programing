#include <stdio.h>  
int main()  
{  
    int i, n, sum=0;  
    printf("Enter any number: ");  
    scanf("%d", &n);  
    for(i=2; i<=n; i+=2)  
    {  
        sum += i;  
    }  
    printf("Sum of all even numbers from 1 to %d: %d", n, sum);  
    return 0;  
}             

OUTPUT

                                                                                                                                   
Enter any number: 123
Sum of all even numbers from 1 to 123: 3782
--------------------------------
Process exited after 2.694 seconds with return value 0
